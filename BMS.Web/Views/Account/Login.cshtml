@model BMS.BLL.DomainService.Account.Dto.LoginInput
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="Bootstrap Admin App + jQuery">
    <meta name="keywords" content="app, responsive, jquery, bootstrap, dashboard, admin">
    <title>Book Management System - Login</title>
</head>

<body>
    <div class="row" style="margin: 0px;">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="row" style="margin-top: 10%;">
                <div style="text-align: center;">
                    <h2>图书管理系统</h2>
                </div>
            </div>
            <form class="mb-lg" action="@Url.Action("Login", "Account")" method="post">
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2">账户：</label>
                        <div class="col-md-10">
                            <input type="text" name="LoginName" class="form-control" placeholder="请输入账户" />
                            @Html.ValidationMessageFor(model => model.LoginName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">密码：</label>
                        <div class="col-md-10">
                            @Html.AntiForgeryToken()
                            <input type="password" name="PassWord" class="form-control" placeholder="请输入密码" />
                            @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2"></div>
                        <div class="col-md-6">
                            <input type="submit" value="登录" style="width: 395px;text-align: center" class="btn btn-primary" />
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </div>
            </form>
            <div class="p-lg text-center">
                <span>&copy;</span>
                <span>2020</span>
                <span>-</span>
                <span>Book Management System</span>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>


    <script src="~/Scripts/jquery-1.11.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />

    <script>

    //获取错误消息
    var errorMessage = '@ViewData["ErrorMessage"]';
    $(function() {
        //如果错误消息存在
        if (errorMessage) {
            alert(errorMessage);
        }
    });

    </script>

</body>
</html>